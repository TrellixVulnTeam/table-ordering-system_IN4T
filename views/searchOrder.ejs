<!DOCTYPE html>
<html lang="en">
<head>
  <style>
    body{
      background-color: aliceblue;
    }

    button{
      float: left;
      padding: 5px;
      margin: 12px;
      cursor: pointer;
    }
    
  </style>
</head>

<body>
  <div class="container-fluid">
    <div class="alert alert-secondary text-center">
      <h1>Search order for table number <%= kitchenorder.table_no %></h1>
      <button type="button" style="border-color:red" onclick="Back()">Back</button><br/><br/><br/>
    </div>
    <ul>
      <table style= "float:left" border ="1">
        <th>Food Order</th>
        <th>Quantity</th>
        <th>Order Status</th>
        <% kitchenorder.forEach(function(order) { %>
        <tr>
          <td style="padding:15px"><%= order.food_order %></td>
          <td style="padding:15px"><%= order.quantity %></td>
          <td style="padding:15px"><%= order.order_status %></td>
        </tr>
        <% }); %>
      </table>
    </ul>
    </div>
    <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
    <script>
      function Back()
      {
        location.href = "staffPage.html";
      }
    </script>
</body>
</html>
