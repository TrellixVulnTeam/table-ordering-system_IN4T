<body>
  <form id="backForm" action="/menuBack" method="get">
  <button type="submit" class="button">Back</button>
  </form>
      <h1>Cart</h1>
    <form id="tableNo">
      <input type="integer" placeholder="Enter Table No" id="tableNo" name="tableNo" required><br/>
    </form>
    <b>&emsp;&nbsp; Item Name &emsp; Quantity &nbsp; Price </b>
    <ol>
      <% cart.forEach(function(carts) { %>
        <table style= "float:left">
          <tr>
          <td>
            <li><%= carts.item_name %> &emsp;
            <%= carts.quantity %> &emsp;&emsp;&nbsp;
            <%= carts.price %></li>
          </td>
        </tr>
      </table>
      <br/><br/>
        <% }); %>
    </ol>
    <button type="button" onclick="checkout()" class="button" >Proceed To Checkout</button>
    <script>
      function checkout() {
        location.href = "checkoutPage.html";
      }
    </script>
</body>
</html>